{
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!src/main.ts",
    "!**/**/index.ts",
    "!**/**/types.ts",
    "!**/**/types.d.ts",
    "!**/node_modules/**",
    "!**/dist/**",
    "!**/fixture/**"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist/"
  ],
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  }
}
